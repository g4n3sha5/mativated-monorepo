{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"],
      "assets/*": ["./assets/*"],
      "lib/*": ["./lib/*"],
      "routes/*": ["./routes/*"],
      "utils/*": ["./utils/*"],
      "@trpc/server/*": ["../server/node_modules/@trpc/server/*"]
    }
  },
  "include": ["src", "**/*.tsx", "**/**/*.tsx"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
    // {
    //   "path": "../server"
    // }
  ]
}
